<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Video_Playlist">

    <EditText
        android:id="@+id/video_link"
        android:layout_width="246dp"
        android:layout_height="64dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Paste the link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Watch_video"
        android:layout_width="141dp"
        android:layout_height="57dp"
        android:layout_marginTop="80dp"
        android:text="Watch Video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_link" />

    <Button
        android:id="@+id/Add_playlist"
        android:layout_width="133dp"
        android:layout_height="58dp"
        android:layout_marginTop="56dp"
        android:text="Add to Playlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Watch_video" />

    <Button
        android:id="@+id/Watch_playlist"
        android:layout_width="131dp"
        android:layout_height="58dp"
        android:layout_marginTop="52dp"
        android:text="Watch Playlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Add_playlist" />
</androidx.constraintlayout.widget.ConstraintLayout>